<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llFragmentEstacions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageButton"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/spinner2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spinner2"
            app:srcCompat="@android:drawable/btn_star_big_on" />

        <TextView
            android:id="@+id/lblNom"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="Nom de l'estació"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner2" />

        <TextView
            android:id="@+id/lblPoblacio"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Població"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/lblNom"
            app:layout_constraintStart_toStartOf="@+id/lblNom"
            app:layout_constraintTop_toBottomOf="@+id/lblNom" />

        <TextView
            android:id="@+id/lblLatitud"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Latitud"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/lblNom"
            app:layout_constraintTop_toBottomOf="@+id/lblPoblacio" />

        <TextView
            android:id="@+id/lblLongitud"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Longitud"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/lblNom"
            app:layout_constraintTop_toBottomOf="@+id/lblLatitud" />

        <TextView
            android:id="@+id/lblAltitud"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Altitud"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/lblNom"
            app:layout_constraintTop_toBottomOf="@+id/lblLongitud" />

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lblNom"
            app:layout_constraintTop_toBottomOf="@+id/spinner2"
            app:srcCompat="@drawable/edumet" />
    </android.support.constraint.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressBarEstacions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:visibility="gone" />
</RelativeLayout>